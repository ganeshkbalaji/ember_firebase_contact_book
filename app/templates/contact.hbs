<h1>Contact Page</h1>

{{#if confirmationMessage}}
  <div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    {{confirmationMessage}}
  </div>
{{/if}}

<form>
  <div class="form-group has-feedback {{if isEmailValid 'has-success'}}">
    <label class="control-label" for="inputEmail">Email address</label>
    {{input type="email" class="form-control" id="inputEmail" placeholder="Email" value=inputEmail}}
    {{#if isEmailValid}}
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
    {{/if}}
  </div>

  <div class="form-group has-feedback {{if isMessageValid 'has-success'}}">
    <label class="control-label" for="inputMessage">Message</label>
    {{textarea class="form-control" rows="7" placeholder="Your message (at least 5 characters)" value=inputMessage}}
  </div>

  <button type="submit" class="btn btn-default {{if isValid 'btn-success'}}" disabled={{isDisabled}} {{action 'sendEmail'}}>
    Send <span class="glyphicon glyphicon-send" aria-hidden="true"></span>
  </button>
</form>